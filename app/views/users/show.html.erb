<p>
  <b>Name:</b>
    <%=h @user.name %>&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Modify', edit_user_path(@user) %>
    &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp; <%= link_to 'Post', post_path %>
  <br />
  <b>Email:</b>
  <%=h @user.email %>   
</p>

<table class="profile">
  <tr>
    <td>
      <%= h @user.name %>
      <%= image_tag("rails.png", :alt => "Hong's App", :class => "round") %>
      <% unless @user.microposts.empty? %>
        <table class="microposts">
          <%= render @microposts %>
        </table>
        <%= will_paginate @microposts %>
      <% end %>
    </td>
    <td class="sidebar round">
      <%= link_to "<strong>Name: #{current_user.name}</strong>", user_path(current_user) %>
      <br />
      <strong>Microposts:</strong> <%= current_user.microposts.count %> 
    </td>
  </tr>
</table>
</table>

